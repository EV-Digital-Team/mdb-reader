{
    "extends": ["config:js-lib", ":semanticCommitScopeDisabled"],
    "baseBranches": ["next"],
    "packageRules": [
        {
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["patch", "minor"],
            "groupName": "dev dependencies (non-major)",
            "groupSlug": "dev-dependencies"
        }
    ],
    "ignorePaths": ["**/node_modules/**"]
}
